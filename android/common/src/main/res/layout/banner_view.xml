<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="top"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F7DB11"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_marginVertical="36dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintLeft_toLeftOf="parent">

                <ImageView
                    android:id="@+id/image_view_banner_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_white_circle" />

                <ImageView
                    android:id="@+id/image_view_banner_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimens_mid_size"
                    android:src="@drawable/ic_delivery_truck" />

            </FrameLayout>

            <TextView
                android:id="@+id/textview_banner_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/your_order"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:lineSpacingExtra="12sp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@+id/frame"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>