<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F7DB11"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <views.SquareContainer
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginVertical="36dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/ic_white_circle">

            <ImageView
                android:id="@+id/image_view_banner_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_mid_size"
                android:src="@drawable/ic_delivery_truck" />

        </views.SquareContainer>

        <TextView
            android:id="@+id/textview_banner_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/your_order"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:lineSpacingExtra="6sp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@+id/frame"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
