<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimens_large_size"
        android:background="@drawable/rectangle_cornered"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_overal_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginVertical="@dimen/dimens_mid_size"
            android:gravity="center"
            android:text="Overal Size is 12 UK" />


        <Button
            android:id="@+id/btn_update_measurements"
            style="@style/buttonStylePrimary"
            android:layout_marginHorizontal="@dimen/dimens_large_size"
            android:layout_weight="0"
            android:text="Update Measurements" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_girl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_neck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_measurements_bg"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="Neck: 33 CM"
                app:layout_constraintHorizontal_bias=".75"
                app:layout_constraintVertical_bias=".28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />

            <TextView
                android:id="@+id/tv_shoulder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_measurements_bg"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="Shoulder: 45CM"
                app:layout_constraintHorizontal_bias=".15"
                app:layout_constraintVertical_bias=".35"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_chest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_measurements_bg"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="Chest: 55CM"
                app:layout_constraintHorizontal_bias=".75"
                app:layout_constraintVertical_bias=".40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_waist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_measurements_bg"

                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="Waist : 36CM"
                app:layout_constraintHorizontal_bias=".20"
                app:layout_constraintVertical_bias=".50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />

            <TextView
                android:id="@+id/tv_thigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_measurements_bg"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="Thigh: 66CM"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias=".75"
                app:layout_constraintVertical_bias=".60"/>

            <TextView
                android:id="@+id/tv_leg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_measurements_bg"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="Leg : 20CM"
                app:layout_constraintHorizontal_bias=".25"
                app:layout_constraintVertical_bias=".75"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>