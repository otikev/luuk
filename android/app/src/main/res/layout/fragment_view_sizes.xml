<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <views.CustomToolBar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:toolbar_title="My Sizes" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimens_mid_size"
        android:layout_margin="@dimen/dimens_large_size"
        app:cardCornerRadius="@dimen/dimens_large_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimens_mid_size"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_mid_size"
                android:background="@drawable/rectangle_circled"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Size: 12"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_chest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_mid_size"
                android:text="Pin Stripe"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_waist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_mid_size"
                android:text="Pin Stripe"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_hips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_large_size"
                android:text="Pin Stripe"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>